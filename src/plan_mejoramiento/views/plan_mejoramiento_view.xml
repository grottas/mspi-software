    <!--
    =================================================================
    plan_mejoramiento.plan
    Plan Mejoramiento
    =================================================================
    -->
    <record model="ir.ui.view" id="plan_search">
        <field name="name">plan_mejoramiento.plan.search</field>
        <field name="model">plan_mejoramiento.plan</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nombre"/>
                <field name="user_id" string="Auditor"/>
                <field name="tipo" />
                <filter name="filtro_tipo_interno"
                    string="Interno"
                    help="Filtrar Tipo interno"
                    domain="[('tipo', '=', 'interno')]"
                />
                <filter name="filtro_tipo_contraloria_bog"
                    string="Contraloria Bogota"
                    help="Filtrar Tipo contraloria_bog"
                    domain="[('tipo', '=', 'contraloria_bog')]"
                />
                <filter name="filtro_tipo_contraloria_gral"
                    string="Contraloria General"
                    help="Filtrar Tipo contraloria_gral"
                    domain="[('tipo', '=', 'contraloria_gral')]"
                />
                <field name="radicado" />
                <field name="dependencia_id" />
                <field name="origen_id" />
                <field name="sub_origen_id" />
                <field name="fecha" />
                <group string="Agrupar por...">
                    <filter string="Tipo" context="{'group_by':'tipo'}"/>
                    <filter string="Unidad" context="{'group_by':'dependencia_id'}"/>
                    <filter string="Auditor" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="plan_form">
        <field name="name">plan_mejoramiento.plan.form</field>
        <field name="model">plan_mejoramiento.plan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button" type="object"
                            icon="fa-cubes" name="hallazgo_view_button" string="Hallazgo"
                        />
                        <button
                            class="oe_stat_button" type="object"
                            icon="fa-dashboard" name="accion_view_button" string="Acción"
                        />
                        <button
                            class="oe_stat_button" type="object"
                            icon="fa-signal" name="avance_view_button" string="Avances"
                        />
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nombre" />
                        <h1><field name="name" placeholder="Plan Mejoramiento YYYY"/></h1>
                    </div>
                    <group>
                        <field name="tipo" />
                        <field name="radicado" />
                        <field name="user_id"
                            string="Auditor"
                            domain="[('id','=',uid)]"
                            readonly="1"
                        />
                        <field name="dependencia_id" />
                        <field name="origen_id" 
                            attrs="{
                                'invisible':[('tipo','!=','interno')],
                                'required':[('tipo','=','interno')],
                            }"
                        />
                        <field name="sub_origen_id" 
                            attrs="{
                                'invisible':[('tipo','!=','interno')],
                                'required':[('tipo','=','interno')],
                            }"
                        />
                        <field name="fecha" />
                        <field name="edt_raiz_id"
                            string="EDT Seguimiento"
                            readonly="1"
                            required="0"
                            attrs="{'invisible': [('edt_raiz_id','=',False)]}"
                        />
                        <field name="project_id"
                            string="Proyecto Seguimiento"
                            readonly="1"
                            required="0"
                            attrs="{'invisible': [('project_id','=',False)]}"
                        />
                    </group>
                    <notebook>
                        <page string='Hallazgos' attrs="{'invisible': [('edt_raiz_id','=',False)]}">
                            <field name="hallazgo_ids" context="{'parent_id': edt_raiz_id, 'plan_id': active_id, 'plan_dependencia_id': dependencia_id}">
                                <tree>
                                    <field name="name"/>
                                     <field name="descripcion"/>
                                     <field name="user_id"/>
                                     <field name="dependencia_id"/>
                                    <field name="fecha_inicio" />
                                    <field name="fecha_fin" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="plan_tree">
        <field name="name">plan_mejoramiento.plan.tree</field>
        <field name="model">plan_mejoramiento.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" 
                    string="Nombre"
                />
                <field name="tipo" />
                <field name="user_id" string="Auditor"/>
                <field name="dependencia_id" />
                <field name="fecha" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="plan_action">
        <field name="name">Plan</field>
        <field name="res_model">plan_mejoramiento.plan</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="plan_menu"
        parent="plan_mejoramiento_menu"
        sequence="20"
        name="Plan" action="plan_action"
    />

