        </field>
    </record>
    <record model="ir.actions.act_window" id="tipo_calificacion_action">
        <field name="name">Tipo Calificación</field>
        <field name="res_model">plan_mejoramiento.tipo_calificacion</field>
        <field name="view_mode">tree,form</field>
