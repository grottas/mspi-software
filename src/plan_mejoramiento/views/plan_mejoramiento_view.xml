    <record model="ir.ui.view" id="hallazgo_form">
        <field name="name">plan_mejoramiento.hallazgo.form</field>
        <field name="model">plan_mejoramiento.hallazgo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button" type="object"
                            icon="fa-dashboard" name="accion_view_button" string="Acción"
                        />
                        <button
                            class="oe_stat_button" type="object"
                            icon="fa-signal" name="avance_view_button" string="Avances"
                        />
                    </div>
                    <div class="oe_title oe_horizontal_separator"> Información del Plan </div>
                    <group>
                        <field name="plan_id" placeholder="Seleccione Plan"/>
                        <field name="plan_tipo" />
                    </group>
                    <separator string="Registro de Hallazgo"/>
                    <field name="id" invisible="1" required="0"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nombre" />
                        <h1><field name="name" placeholder="Nombre del Hallazgo"/></h1>
                    </div>
                    <group>
                        <field name="descripcion" />
                        <field name="proceso_id" />
                        <field name="dependencia_id" />
                        <field name="causa_ids" >
                             <tree>
                                 <field name="name"/>
                                  <field name="descripcion"/>
                             </tree>
                        </field>
                        <field name="user_id" />
                        <field name="fecha_inicio" />
                        <field name="fecha_fin" />
                    </group>
                    <notebook>
                        <page string='Acciones' attrs="{'invisible': [('id','=',False)]}">
                            <field name="accion_ids" context="{'hallazgo_id': active_id}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="hallazgo_tree">
        <field name="name">plan_mejoramiento.hallazgo.tree</field>
        <field name="model">plan_mejoramiento.hallazgo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="descripcion" />
                <field name="user_id" />
