    <record model="ir.ui.view" id="accion_form">
        <field name="name">plan_mejoramiento.accion.form</field>
        <field name="model">plan_mejoramiento.accion</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button" type="object"
                            icon="fa-signal" name="avance_view_button" string="Avances"
                        />
                    </div>
                    <group name="informacion_relacionada" col='4'>
                        <group name="informacion_hallazgo" col='2'>
                            <separator colspan ='2' string="Información Hallazgo" />
                            <field name="hallazgo_id" placeholder="Seleccione Hallazgo" />
                            <field name="hallazgo_dependencia_id" />
                        </group>
                        <group name="informacion_plan" col='2'>
                             <separator colspan ='2' string="Información Plan"/>
                            <field name="plan_tipo" />
                            <field name="plan_id" />
                        </group>
                    </group>
                    <separator string="Registro de Acción"/>
                    <field name="id" invisible="1" required="0"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nombre" />
                        <h1><field name="name" placeholder="Nombre Acción"/></h1>
                    </div>
                    <group>
                        <field name="descripcion" />
                        <field name="tipo"
                            attrs="{
                                'invisible':[('plan_tipo','!=','interno')],
                                'required':[('plan_tipo','=','interno')],
                            }"
                        />
                        <field name="ejecutor_id" />
                        <field name="dependencia_id" />
                        <field name="jefe_dependencia_id" />
                        <field name="user_id" />
                        <field name="objetivo" />
                        <field name="indicador" />
                        <field name="unidad_medida" />
                        <field name="meta" />
                        <field name="recurso_ids" />
                        <field name="fecha_inicio" />
                        <field name="fecha_fin" />
                        <field name="fecha_creacion" />
                    </group>
                    <notebook>
                        <page string='Avances' attrs="{'invisible': [('state','in',['nuevo','por_aprobar'])]}">
                            <field name="avance_ids" context="{'accion_id': active_id}" >
                                <tree>
                                    <field name="descripcion"/>
                                    <field name="aprobacion_jefe_dependencia"/>
                                    <field name="fecha_creacion"/>
                                    <field name="state"/>
                                     <field name="tipo_calificacion_id"/>
                                     <field name="observacion"/>
                                </tree>
                            </field>
                        </page>
                        <page string='Tareas' attrs="{'invisible': [('state','in',['nuevo','por_aprobar'])]}">
                            <field name="task_ids" context="{'accion_id': active_id}" >
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="dependencia_id" required="1"/>
                                    <field name="user_id" domain="[('department_id','=', dependencia_id)]" required="1"/>
                                    <field name="fecha_inicio" required="1"/>
                                    <field name="fecha_fin" required="1"/>
                                    <field name="project_id" invisible="1"/>
                                    <field name="stage_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="accion_tree">
        <field name="name">plan_mejoramiento.accion.tree</field>
        <field name="model">plan_mejoramiento.accion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="descripcion" />
                <field name="state" />
                <field name="ejecutor_id" invisible="1"/>
                <field name="dependencia_id" />
                <field name="jefe_dependencia_id" invisible="1"/>
                <field name="user_id" />
                <field name="fecha_inicio" />
                <field name="fecha_fin" />
                <field name="fecha_creacion" invisible="1"/>
                <field name="hallazgo_id" invisible="1"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="accion_action">
        <field name="name">Acción</field>
        <field name="res_model">plan_mejoramiento.accion</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="accion_menu"
        parent="plan_mejoramiento_menu"
        sequence="20"
