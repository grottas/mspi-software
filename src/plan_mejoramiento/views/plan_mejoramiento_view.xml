                <field name="descripcion" />
                <field name="state" />
                <filter name="filtro_state_nuevo"
                    string="nuevo"
                    help="Filtrar Estado nuevo"
                    domain="[('state', '=', 'nuevo')]"
                />
                <filter name="filtro_state_por_aprobar"
                    string="por_aprobar"
                    help="Filtrar Estado por_aprobar"
                    domain="[('state', '=', 'por_aprobar')]"
                />
                <filter name="filtro_state_en_progreso"
                    string="en_progreso"
                    help="Filtrar Estado en_progreso"
                    domain="[('state', '=', 'en_progreso')]"
                />
                <filter name="filtro_state_terminado"
                    string="terminado"
                    help="Filtrar Estado terminado"
                    domain="[('state', '=', 'terminado')]"
                />
                <filter name="filtro_state_cancelado"
                    string="cancelado"
