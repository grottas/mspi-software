        </field>
    </record>
    <record model="ir.actions.act_window" id="hallazgo_action">
        <field name="name">Hallazgo</field>
        <field name="res_model">plan_mejoramiento.hallazgo</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="hallazgo_menu"
