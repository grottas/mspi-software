    =================================================================
    -->
    <record model="ir.ui.view" id="tipo_calificacion_search">
        <field name="name">plan_mejoramiento.tipo_calificacion.search</field>
        <field name="model">plan_mejoramiento.tipo_calificacion</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="activo_sistema" />
                <field name="tipo" />
                <filter name="filtro_tipo_interno"
                    string="Interno"
                    help="Filtrar Tipo interno"
                    domain="[('tipo', '=', 'interno')]"
                />
                <filter name="filtro_tipo_contraloria_bog"
                    string="Contraloria Bogotá"
                    help="Filtrar Tipo contraloria_bog"
                    domain="[('tipo', '=', 'contraloria_bog')]"
                />
                <filter name="filtro_tipo_contraloria_gral"
                    string="Contraloria General"
                    help="Filtrar Tipo contraloria_gral"
                    domain="[('tipo', '=', 'contraloria_gral')]"
                />
                <field name="state" />
                <filter name="filtro_state_sin_iniciar"
                    string="Sin Iniciar"
                    help="Filtrar Estado sin_iniciar"
                    domain="[('state', '=', 'sin_iniciar')]"
                />
                <filter name="filtro_state_en_progreso"
                    string="En Progreso"
                    help="Filtrar Estado en_progreso"
                    domain="[('state', '=', 'en_progreso')]"
                />
                <filter name="filtro_state_bloqueado"
                    string="Bloqueado"
                    help="Filtrar Estado bloqueado"
                    domain="[('state', '=', 'bloqueado')]"
                />
                <filter name="filtro_state_terminado"
                    string="Terminado"
                    help="Filtrar Estado terminado"
                    domain="[('state', '=', 'terminado')]"
                />
                <filter name="filtro_state_terminado_con_retraso"
                    string="Terminado con Retraso"
                    help="Filtrar Estado terminado_con_retraso"
                    domain="[('state', '=', 'terminado_con_retraso')]"
                />
                <group string="Agrupar por...">
                    <filter string="Tipo" context="{'group_by':'tipo'}"/>
                    <filter string="Estado" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="tipo_calificacion_form">
        <field name="name">plan_mejoramiento.tipo_calificacion.form</field>
        <field name="model">plan_mejoramiento.tipo_calificacion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
