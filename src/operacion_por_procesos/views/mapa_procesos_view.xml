        sequence="100"
     />

    <!--
    =================================================================
    mapa_procesos.proceso
    Procesos
    =================================================================
    -->
    <record model="ir.ui.view" id="proceso_search">
        <field name="name">mapa_procesos.proceso.search</field>
        <field name="model">mapa_procesos.proceso</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="objetivo" />
                <field name="alcance" />
                <field name="tipo" />
                <filter name="filtro_tipo_estrategico"
                    string="estrategico"
                    help="Filtrar Tipo estrategico"
                    domain="[('tipo', '=', 'estrategico')]"
                />
                <filter name="filtro_tipo_misional"
                    string="misional"
                    help="Filtrar Tipo misional"
                    domain="[('tipo', '=', 'misional')]"
                />
                <filter name="filtro_tipo_apoyo"
                    string="apoyo"
                    help="Filtrar Tipo apoyo"
                    domain="[('tipo', '=', 'apoyo')]"
                />
                <filter name="filtro_tipo_control"
                    string="control"
                    help="Filtrar Tipo control"
                    domain="[('tipo', '=', 'control')]"
                />
                <field name="dependencia_lider" />
                <field name="dependencia_gestor" />
                <field name="actividad_ids" />
                <group string="Agrupar por...">
                    <filter string="Nombre" context="{'group_by':'name'}"/>
                    <filter string="Objetivo" context="{'group_by':'objetivo'}"/>
                    <filter string="Alcance" context="{'group_by':'alcance'}"/>
                    <filter string="Tipo" context="{'group_by':'tipo'}"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="proceso_form">
        <field name="name">mapa_procesos.proceso.form</field>
        <field name="model">mapa_procesos.proceso</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nombre del Proceso" />
                        <h1><field name="name" placeholder="Nombre del Proceso"/></h1>
                    </div>
                    <group>
                        <field name="id" attrs="{'invisible':True}"/>
                        <field name="objetivo" />
                        <field name="alcance" />
                        <field name="tipo" />
                        <field name="dependencia_lider" />
                        <field name="dependencia_gestor" />
                    </group>
                    <notebook>
                        <page string='Actividades' attrs="{'invisible': [('id','=',False)]}">
                            <field name="actividad_ids"  context="{'proceso_id': active_id}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="proceso_tree">
        <field name="name">mapa_procesos.proceso.tree</field>
        <field name="model">mapa_procesos.proceso</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="tipo" />
                <field name="dependencia_lider" />
                <field name="dependencia_gestor" />
                <field name="actividad_ids" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="proceso_action">
        <field name="name">Procesos</field>
        <field name="res_model">mapa_procesos.proceso</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="proceso_menu"
        parent="operacion_por_procesos_menu"
        sequence="20"
        name="Procesos" action="proceso_action"
    />

